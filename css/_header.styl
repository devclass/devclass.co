header
  background-color: darken(devclass-color, 30%)
  padding: 40px 0
  color: #fff
  a, a:visited
    color: #fff
    &:active, &:focus
      text-decoration: none
    &:hover
      color: devclass-color
  .brand
    font-size: 24px
    font-weight: 900
    span
      margin-left: 0.5em
    img
      max-width: 75px
  .nav >
    li > a
      font-size: 13px
      text-transform: uppercase
      font-weight: 700
      &:hover
        background: 0
        color: devclass-color
